    }

    function deleteCategory(id) {
        $.ajax({
            url: `/deleteCategory/${id}`, 
            type: 'DELETE',
            success: function () {
                loadCategories();
            },
            error: function (error) {
                console.log('Error:', error);
            }
        });
    }

</script>